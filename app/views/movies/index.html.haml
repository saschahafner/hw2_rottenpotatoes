-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => @title_style}= link_to 'Movie Title', movies_sort_title_path, :id => 'title_header'
      %th Rating
      %th{:class => @date_style}= link_to 'Release Date', movies_sort_date_path, :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
